@model Fall2025_project3_jagrisaffe.Models.ActorMovie

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Actor / Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ActorId" class="control-label">Actor Name</label>
                <select asp-for="ActorId" class ="form-control" asp-items="ViewBag.ActorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="MovieId" class="control-label">Movie Title</label>
                <select asp-for="MovieId" class ="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary-custom">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}